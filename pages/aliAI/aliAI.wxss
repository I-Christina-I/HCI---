/* 样式定义 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 10px;
}

.conversation {
  width: 100%;
  max-height: 70vh;
  overflow-y: scroll;
  margin-bottom: 10px;
  padding: 10px;
  box-sizing: border-box;
}

.message {
  display: flex;
  margin: 5px 0;
}

.user {
  justify-content: flex-end;
}

.assistant {
  justify-content: flex-start;
}

.bubble {
  max-width: 70%;
  padding: 10px;
  border-radius: 10px;
  background-color: #f1f1f1;
  box-shadow: 0px 0px 5px rgba(0,0,0,0.2);
}

.user .bubble {
  background-color: #1aad19;
  color: white;
}

.assistant .bubble {
  background-color: #e6e6e6;
  color: black;
}

.input {
  width: 80%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.send-button {
  width: 80%;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
}
